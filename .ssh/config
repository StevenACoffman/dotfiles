# later rules override earlier ones if they are more specific
Host github.com
  User StevenACoffman
  HostName github.com
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  UseKeychain yes
  AddKeysToAgent yes
  UserKnownHostsFile=/dev/null

Host cephalopod
  User root
  Hostname cephalopod.local
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  UseKeychain yes
  AddKeysToAgent yes
  UserKnownHostsFile=/dev/null

Host github-shared-libs
  User git
  Hostname github.com
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  UserKnownHostsFile=/dev/null
  UseKeychain yes
  AddKeysToAgent yes

Host git.prod.cirrostratus.org
  IdentityFile ~/.ssh/id_rsa
  User scoffman
  IdentitiesOnly yes
  UseKeychain yes
  AddKeysToAgent yes

Host git.test.cirrostratus.org
    IdentityFile ~/.ssh/id_rsa
    User scoffman
    IdentitiesOnly yes
    UseKeychain yes
    AddKeysToAgent yes

Host puppet.test.cirrostratus.org
    IdentityFile ~/.ssh/dev.pem
    StrictHostKeyChecking no
    User ubuntu
    IdentitiesOnly yes
    UseKeychain yes
    AddKeysToAgent yes

Host puppet.acorn.cirrostratus.org
    IdentityFile ~/.ssh/prod.pem
    StrictHostKeyChecking no
    User ubuntu
